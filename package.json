{
  "name": "typescript-api-skeleton",
  "version": "1.0.0",
  "description": "Skeleton for javascript projects",
  "main": "./src/server.ts",
  "repository": "https://github.com/erickjosue8916/typescript_skeletons.git",
  "author": "Erick Saravia erickjosue8916@gmail.com",
  "license": "MIT",
  "scripts": {
    "start:prod": "yarn build && node ./dist/server.js",
    "start:dev": "ts-node-dev -r dotenv/config ./src/server.ts",
    "build": "tsc",
    "lint": "eslint --ignore-path .gitignore . --ext .ts",
    "lint:fix": "yarn lint -- --fix",
    "test": "jest --verbose",
    "commit": "git add . && cz",
    "build:watch": "tsc --watch",
    "format": "prettier --config .prettierrc 'src/**/*.jt' --write",
    "format:watch": "onchange 'src/**/*.ts' 'tests/**/*.ts' 'scripts/**/*.ts' -- prettier --write {{changed}}"
  },
  "keywords": [
    "javascript",
    "typescript",
    "joi",
    "express",
    "js"
  ],
  "husky": {
    "hooks": {
      "pre-push": "npm run lint",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.4.0",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.1.0",
    "@typescript-eslint/parser": "^8.1.0",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv": "^16.4.5",
    "eslint": "^8",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jest": "^28.8.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "husky": "^9.1.4",
    "jest": "^29.7.0",
    "onchange": "^7.1.0",
    "prettier": "^3.3.3",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.4",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.5"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.19.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
