{
  "name": "typescript-api-skeleton",
  "version": "1.0.0",
  "description": "Skeleton for javascript projects",
  "main": "./src/server.ts",
  "repository": "https://github.com/erickjosue8916/typescript_skeletons.git",
  "author": "Erick Saravia erickjosue8916@gmail.com",
  "license": "MIT",
  "scripts": {
    "start:prod": "yarn build && node ./dist/server.js",
    "start:dev": "ts-node-dev -r dotenv/config ./src/server.ts",
    "build": "tsc",
    "lint": "eslint --ignore-path .gitignore . --ext .ts",
    "lint:fix": "yarn lint -- --fix",
    "test": "jest --verbose",
    "commit": "git add . && cz",
    "build:watch": "tsc --watch",
    "format": "prettier --config .prettierrc 'src/**/*.jt' --write",
    "format:watch": "onchange 'src/**/*.ts' 'tests/**/*.ts' 'scripts/**/*.ts' -- prettier --write {{changed}}"
  },
  "keywords": [
    "javascript",
    "typescript",
    "joi",
    "express",
    "js"
  ],
  "husky": {
    "hooks": {
      "pre-push": "npm run lint",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^26.0.23",
    "@types/node": "^16.0.0",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "commitizen": "^4.2.4",
    "dotenv": "^10.0.0",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "husky": "^7.0.1",
    "jest": "^27.0.6",
    "onchange": "^7.1.0",
    "prettier": "^2.3.2",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-node-dev": "^1.1.8",
    "typescript": "^5.5"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.17.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
